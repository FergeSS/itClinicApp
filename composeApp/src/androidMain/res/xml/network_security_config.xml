<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Разрешаем cleartext (HTTP) трафик для всех доменов в режиме разработки -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Явное разрешение для локальных адресов -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        
        <!-- Android Emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- хост машина -->
        <domain includeSubdomains="true">10.0.2.15</domain> <!-- сам эмулятор -->
        
        <!-- Локальные сети (динамическое определение IP) -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">10.249.157.0</domain>
    </domain-config>
</network-security-config>

